</head>
<body>
<header>
    <div class="ui borderless main menu top-header">
        <div class="ui container">
            <div class="header item logo-item">
                <img class="logo" src="{{ asset('assets/images/logo.png') }}">
            </div>

            {% for key,item in navigation %}
                {% if item.parents %}
                    <div class="ui dropdown item">
                        <i class="{{ item.classIcon }}" style="margin-right: 5px;"></i> {{ item.title }} <i class="dropdown icon"></i>
                        <div class="menu">
                            {% for itemParent in item.parents %}
                                <a class="item" href="{{ itemParent.urlPath }}">
                                    <i class="{{ itemParent.classIcon }}"></i> {{ itemParent.title }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% elseif key == 'resource' %}
                    <div class="ui dropdown item">
                        <i class="{{ item.classIcon }}" style="margin-right: 5px;"></i> {{ item.title }} <i class="dropdown icon"></i>
                        <div class="menu">
                            {% for itemResourceType in resourcesType %}
                                <a class="item" href="/admin/resources/{{ itemResourceType.getAttribute('id') }}">
                                    <i class="icon-doc icons"></i> {{ itemResourceType.getAttribute('title') }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <a class="item" href="{{ item.urlPath }}">
                        <i class="{{ item.classIcon }}"></i> {{ item.title }}
                    </a>
                {% endif %}
            {% endfor %}

            <a href="/admin/logout/" class="ui right floated item" tabindex="0">
                <i class="icon-logout icons"></i> {{ __('dashboard.main.logout') }}
            </a>
        </div>
    </div>
</header>

{% block content %}{% endblock %}

